<resources>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/cl_gray_disable</item>
    </style>

    <style name="MyEditTextAmountPaymentDetail2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">0.00</item>
        <item name="android:textColor">#000000</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">numberDecimal|number</item>
    </style>


    <style name="Button.Primary" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/primary_blue_text</item>
    </style>

    <style name="Button.Primary.Dark" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_primary_dark</item>
        <item name="android:textColor">@color/primary_blue_text</item>
    </style>


    <style name="Button.Disable" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_primary_disable</item>
        <item name="android:textColor">@color/primary_blue_text</item>
    </style>


    <style name="Button.Danger" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_danger</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="MyEditTextAmountPaymentDetailOR">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">0.00</item>
        <item name="android:textColor">#000000</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">numberDecimal|number</item>
    </style>

    <style name="MyEditTextAmount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">0.00</item>
        <item name="android:textColor">#000000</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">numberDecimal|number</item>
    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">5dp</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">@dimen/text_size_medium</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>

</resources>
